@model BeautyGuide.Models.BaiViet

@{
    ViewData["Title"] = "Xóa bài viết";
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-area="Admin" asp-controller="BaiViet" asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5 class="alert-heading">Cảnh báo!</h5>
                <p>Bạn có chắc chắn muốn xóa bài viết này? Hành động này không thể hoàn tác.</p>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h2>@Model.TieuDe</h2>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Danh mục:</dt>
                        <dd class="col-sm-9">@(Model.DanhMuc?.TenDanhMuc ?? "Không có")</dd>

                        <dt class="col-sm-3">Người đăng:</dt>
                        <dd class="col-sm-9">@(Model.NguoiDang?.UserName ?? "Không có")</dd>

                        <dt class="col-sm-3">Ngày đăng:</dt>
                        <dd class="col-sm-9">@Model.NgayDang.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Lượt xem:</dt>
                        <dd class="col-sm-9">@Model.LuotXem</dd>

                        <dt class="col-sm-3">Số bình luận:</dt>
                        <dd class="col-sm-9">@(Model.BinhLuans?.Count ?? 0)</dd>
                    </dl>

                    <div class="mt-4">
                        <h5>Mô tả ngắn:</h5>
                        <p>@Model.MoTaNgan</p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Ảnh bìa</h5>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.AnhBia))
                            {
                                <img src="@Model.AnhBia" alt="@Model.TieuDe" class="img-fluid rounded" style="max-height: 200px;">
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <p class="mb-0">Không có ảnh bìa</p>
                                </div>
                            }
                        </div>
                    </div>

                    <form asp-area="Admin" asp-controller="BaiViet" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-area="Admin" asp-controller="BaiViet" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 